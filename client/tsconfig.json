{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/test.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./src/",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "es2020",
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}
