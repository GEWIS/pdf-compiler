{
    "swagger": "2.0",
    "info": {
        "description": "A simple API to compile LaTeX templates to",
        "title": "PDF Compiler",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/compile": {
            "post": {
                "description": "Compiles a LaTeX template and returns a PDF",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/pdf"
                ],
                "tags": [
                    "Compile"
                ],
                "summary": "Compile LaTeX template",
                "parameters": [
                    {
                        "description": "LaTeX template",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/main.CompileRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "PDF file",
                        "schema": {
                            "type": "file"
                        }
                    },
                    "400": {
                        "description": "Invalid request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Compilation error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "main.CompileRequest": {
            "type": "object",
            "properties": {
                "tex": {
                    "type": "string",
                    "example": "\\documentclass{article}\n\\begin{document}\nHello, world!\n\\end{document}"
                }
            }
        }
    }
}